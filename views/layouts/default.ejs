<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>hyperblender - <%=pageTitle%></title>
        <% include ../partials/global-metas %>
        <% include ../partials/fullcalendars-links %>
        <%- style %>
    </head>
    <body>
        <!-- Nav -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/app">hyperblender</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/app/dashboard">accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/app/calendars">calendriers</a>
                        </li>
                        <!-- <li class="nav-item">
                            <a class="nav-link" href="/app/options">options</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link" href="/app/tutorial">tutoriel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/app/contact">contact</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav nav-flex-icons">
                        <li class="nav-item">
                            <a href="/app/collisions" class="nav-link">
                                <span class="badge badge-light" id="collisionsCount">
                                    <div class="spinner-grow spinner-grow-sm" role="status"></div>
                                </span> collisions
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownMenu" data-toggle="dropdown"
                                href="#">profil</a>
                            <div id="dropdown-profile" class="dropdown-menu dropdown-menu-right dropdown-info"
                                aria-labelledby="navbarDropdownMenu">
                                <a class="dropdown-item" href="/app/profile">mon compte</a>
                                <a id="logout-item" class="dropdown-item text-danger" href="/auth/logout">se d√©connecter</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Head Title -->
        <div class="container-fluid bg-primary text-light pt-4 mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1><%-pageTitle%></h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="pt-4" style="min-height: calc(100vh - 248px);">
            <div class="container">
                <div class="row">
                    <div id="alertZone" class="col-12 col-md-10 offset-md-1">
                        <% if(alertEmail.length > 0) { %>
                            <div id="alertEmailZone" class="alert alert-danger fade show m-0 mb-2">
                                <%-alertEmail%>
                            </div>
                        <% } %>
                        <% if(alertDanger.length > 0) { %>
                            <div class="alert alert-danger alert-dismissable fade show m-0 mb-2">
                                <%-alertDanger%>
                                <button type="button" class="close" data-dismiss="alert">
                                    <span>&times;</span>
                                </button>
                            </div>
                        <% } %>
                        <% if(alertSuccess.length > 0) { %>
                            <div class="alert alert-success alert-dismissable fade show m-0 mb-2">
                                <%-alertSuccess%>
                                <button type="button" class="close" data-dismiss="alert">
                                    <span>&times;</span>
                                </button>
                            </div>
                        <% } %>
                        <% if(alertInfo.length > 0) { %>
                            <div class="alert alert-info alert-dismissable fade show m-0 mb-2">
                                <%-alertInfo%>
                                <button type="button" class="close" data-dismiss="alert">
                                    <span>&times;</span>
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <!-- View -->
            <%-body%>
        </div>
        <footer class="py-5 bg-dark text-white">
            <% include ../partials/global-footer %>
        </footer>
        <% include ../partials/global-scripts %>
        <% include ../partials/fullcalendars-scripts %>
        <%- script %>
    </body>
</html>